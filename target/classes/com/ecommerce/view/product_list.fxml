<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17" 
            fx:controller="com.ecommerce.controller.ProductListController" 
            prefHeight="700.0" prefWidth="400.0" style="-fx-background-color: white;">

    <fx:define>
        <ToggleGroup fx:id="genderTabGroup" />
    </fx:define>
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0" style="-fx-background-color: #f0f0f0; -fx-padding: 10;">
                <ImageView fx:id="btnBack" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#handleBack" style="-fx-cursor: hand;">
                    <Image url="/images/back_arrow.png" /> 
                </ImageView>
                <Label fx:id="lblCategoryTitle" text="DANH MỤC" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
                <HBox HBox.hgrow="ALWAYS" /> 
                <ImageView fx:id="btnCart" onMouseClicked="#handleCartClick" fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                    <Image url="/images/cart.png" />
                    <HBox.margin><Insets right="10.0" /></HBox.margin>
                </ImageView>
                <Label text="SẮP XẾP THEO" onMouseClicked="#handleFilterClick" style="-fx-font-weight: bold; -fx-cursor: hand;" />
            </HBox>
            
            <HBox alignment="CENTER" prefHeight="45.0" style="-fx-background-color: white;">
                <ToggleButton text="TOP" toggleGroup="$genderTabGroup" selected="true" style="-fx-background-color: transparent;" />
                <ToggleButton text="MEN" toggleGroup="$genderTabGroup" style="-fx-background-color: transparent;" />
                <ToggleButton text="WOMEN" toggleGroup="$genderTabGroup" style="-fx-background-color: transparent;" />
                <ToggleButton text="KIDS" toggleGroup="$genderTabGroup" style="-fx-background-color: transparent;" />
            </HBox>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent;">
            <VBox style="-fx-background-color: white;" minHeight="600.0">
                
                <TilePane fx:id="productGrid" hgap="10.0" vgap="10.0" prefColumns="2" alignment="CENTER">
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="20.0" left="10.0" />
                    </padding>
                </TilePane>
                
                <VBox VBox.vgrow="ALWAYS" />
                
                <VBox style="-fx-background-color: #2c3e50; -fx-padding: 20;" spacing="10.0">
                    <Label text="LIÊN HỆ VỚI CHÚNG TÔI" textFill="WHITE">
                        <font><Font name="System Bold" size="14.0" /></font>
                    </Label>
                    <Separator />
                    
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                        <Label text="support@ecommerce.com" textFill="WHITE" />
                    </HBox>
                    
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                        <Label text="Hotline: 1900 1000" textFill="WHITE" />
                    </HBox>
                    
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            </ImageView>
                        <Label text="Hà Nội, Việt Nam" textFill="WHITE" wrapText="true" />
                    </HBox>
                    
                    <Separator />
                    <Label text="© 2023 E-Commerce App. All rights reserved." textFill="#bdc3c7">
                        <font><Font size="10.0" /></font>
                    </Label>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" prefHeight="60.0" style="-fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, -5);">
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" onMouseClicked="#handleBack" style="-fx-cursor: hand;">
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/images/home.png" />
                </ImageView>
                <Label text="TRANG CHỦ" />
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" onMouseClicked="#handleNavCategoryClick" style="-fx-cursor: hand;">
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/images/category.png" />
                </ImageView>
                <Label text="DANH MỤC" />
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" onMouseClicked="#handleNavFavoriteClick" style="-fx-cursor: hand;">
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/images/heart.png" />
                </ImageView>
                <Label text="YÊU THÍCH" />
            </VBox>
            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" onMouseClicked="#handleNavPersonalClick" style="-fx-cursor: hand;">
                <ImageView fitHeight="24.0" fitWidth="24.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="/images/user.png" />
                </ImageView>
                <Label text="CÁ NHÂN" />
            </VBox>
        </HBox>
    </bottom>
</BorderPane>